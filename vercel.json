{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "npm run build",
          "outputDirectory": "dist"
        }
      },
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "GEMINI_API_KEY": "${GEMINI_API_KEY}",
      "GROQ_API_KEY": "${GROQ_API_KEY}",
      "GITHUB_TOKEN": "${GITHUB_TOKEN}",
      "VITE_ENDPOINT": "${VITE_ENDPOINT}",
      "VITE_PROJECT_ID": "${VITE_PROJECT_ID}",
      "VITE_DATABASE_ID": "${VITE_DATABASE_ID}",
      "VITE_HISTORY_COLLECTION_ID": "${VITE_HISTORY_COLLECTION_ID}",
      "VITE_IMAGES_BUCKET_ID": "${VITE_IMAGES_BUCKET_ID}"
    }
  }